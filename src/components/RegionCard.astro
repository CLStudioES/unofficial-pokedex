---

{
    infoRegions.map(({ name, href, img }) => (
        <article class="group w-80 h-80 rounded-2xl shadow-xl hover:scale-105 hover:shadow-2xl transition-all duration-200 cursor-pointer flex flex-col mx-auto">
            <div class="group h-full w-full flex justify-center items-center">
                <img
                    src={img}
                    alt={name}
                    class="h-full w-full object-fit rounded-2xl grayscale group-hover:grayscale-0 transition-all duration-200"
                />
                <a
                    href={href}
                    class="group absolute my-auto mx-auto text-white text-7xl hidden group-hover:flex group-hover:animate-pulse-fade-in transition-all duration-100 text-outline-1"
                >
                    {name}
                </a>
            </div>
        </article>
    ))
}

<style>
    .text-outline-1 {
